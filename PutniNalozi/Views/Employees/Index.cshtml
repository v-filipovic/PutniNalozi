@model IEnumerable<PutniNalozi.Models.Employee>

@{
    ViewBag.Title = "Zaposlenici";
}

<h2>Lista zaposlenika</h2>

<p>
    @Html.ActionLink("Dodaj novog zaposlenika", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.ID }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
